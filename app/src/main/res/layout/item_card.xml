<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="@dimen/card_size"
  android:background="@drawable/card_background">

  <ImageView
    android:id="@+id/avatar"
    android:layout_width="@dimen/avatar_size"
    android:layout_height="@dimen/avatar_size"
    app:layout_constraintBottom_toTopOf="@id/repoName"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    tools:src="@drawable/avatar_placeholder" />

  <TextView
    android:id="@+id/repoName"
    style="@style/Caption"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/large_size"
    android:layout_marginTop="@dimen/tiny_size"
    android:layout_marginEnd="@dimen/large_size"
    android:ellipsize="end"
    android:gravity="center"
    android:lines="1"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/avatar"
    tools:text="Repository name" />

  <TextView
    android:id="@+id/likeCaption"
    style="@style/Caption.Green"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/large_size"
    android:layout_marginTop="@dimen/large_size"
    android:alpha="0"
    android:background="@drawable/like_bgn"
    android:padding="@dimen/tiny_size"
    android:rotation="-45"
    android:text="@string/like"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:alpha="1" />

  <TextView
    android:id="@+id/nopeCaption"
    style="@style/Caption.Red"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/large_size"
    android:layout_marginEnd="@dimen/large_size"
    android:alpha="0"
    android:background="@drawable/nope_bgn"
    android:padding="@dimen/tiny_size"
    android:rotation="45"
    android:text="@string/nope"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:alpha="1" />

  <TextView
    android:id="@+id/watchersCount"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/regular_size"
    android:layout_marginBottom="@dimen/regular_size"
    android:drawablePadding="@dimen/tiny_size"
    app:drawableStartCompat="@drawable/ic_eye"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    tools:text="123" />

</androidx.constraintlayout.widget.ConstraintLayout>